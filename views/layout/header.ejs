<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portofolio Vina</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>

<nav class="navbar navbar-expand-lg fixed-top">
  <div class="container">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mx-auto">
        <% if (session && session.user && session.user.role === "admin") { %>
          <!-- Menu Admin -->
          <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
          <li class="nav-item"><a href="/admin/foto" class="nav-link">Kelola Projek</a></li>
        <% } else { %>
          <!-- Menu User -->
          <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
          <li class="nav-item"><a href="/#about" class="nav-link">Tentang Saya</a></li>
          <li class="nav-item"><a href="/#projects" class="nav-link">Projek</a></li>
          <li class="nav-item"><a href="/#contact" class="nav-link">Kontak</a></li>
        <% } %>

        <!-- Login & Logout -->
        <% if (session && session.user) { %>
          <li class="nav-item">
            <a href="/auth/logout" class="nav-link nl-admin">
              <i class="bi bi-box-arrow-right"></i> Logout
            </a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a href="/auth/login" class="nav-link nl-admin">
              <i class="bi bi-person"></i> Login
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

